<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:fontFamily="serif"
        android:text="Iniciar sesión"
        android:textAlignment="center"
        android:textColor="#2B00A7"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="121dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/_268080" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:textColorHint="#A4A7C5" />

        <EditText
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            android:drawableStart="@drawable/ic_baseline_key_24"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:textColorHint="#A4A7C5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="34sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="¿Olvidaste tu contraseña?"
            android:textAlignment="center"
            android:textColor="#4313B5"
            android:textSize="15sp" />

        <Button
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"

            android:layout_marginBottom="8dp"
            android:background="@drawable/background_btn_intro3"
            android:text="Iniciar sesión"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:layout_marginTop="8dp" />

        <Button
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"

            android:layout_marginBottom="8dp"
            android:background="@drawable/background_btn_intro4"
            android:text="Registrarse"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>